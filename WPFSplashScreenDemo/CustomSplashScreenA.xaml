<Window x:Class="WPFSplashScreenDemo.CustomSplashScreenA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSplashScreenDemo"
        mc:Ignorable="d"
        Title="SplashScreen" Height="350" Width="500"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">
    <Border CornerRadius="15" Background="#303030" BorderBrush="#4040FF" BorderThickness="2">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="WPF splash screen demo" Foreground="White" HorizontalAlignment="Center" FontSize="30"/>
            <ProgressBar x:Name="progressBar" Value="0" Height="10" HorizontalAlignment="Stretch" IsIndeterminate="True" Background="#AAA"/>
        </StackPanel>
    </Border>
</Window>
